<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backgrount_result"
    tools:context=".SegundaTela">

    <ImageButton
        android:id="@+id/itBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_back"
        android:layout_marginBottom="650dp"
        android:layout_marginEnd="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/blueDark"
        android:layout_marginBottom="500dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTE"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/whiteIce"
        android:layout_marginBottom="500dp"
        android:layout_marginStart="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvGrau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTE"
        android:textSize="40dp"
        android:textColor="@color/whiteIce"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResultado"/>

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="480dp"
        android:layout_marginTop="250dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSobre"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/pesoNormal"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:textColor="@color/blueExtreme"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@id/Scroll"
                app:layout_constraintBottom_toBottomOf="@id/Scroll"
                app:layout_constraintEnd_toEndOf="@id/Scroll"
                app:layout_constraintStart_toStartOf="@id/Scroll"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>